<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".challenges.ChallengeCreateFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        tools:ignore="ImageContrastCheck"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="32dp"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="156dp"
        android:layout_marginHorizontal="32dp"
        />

    <EditText
        android:id="@+id/EnterChallengeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="text"
        android:minHeight="50dp"
        android:hint="Enter Challenge Name"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="32dp"
        android:importantForAutofill="no" />

    <ToggleButton
        android:id="@+id/btnMon"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Mon"
        android:textOff="Mon"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="32dp"
        />

    <ToggleButton
        android:id="@+id/btnTue"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Tue"
        android:textOff="Tue"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="32dp"
        android:layout_marginHorizontal="16dp"
        android:translationX="85dp"
        />

    <ToggleButton
        android:id="@+id/btnWed"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Wed"
        android:textOff="Wed"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="32dp"
        android:layout_marginHorizontal="16dp"
        android:translationX="155dp"
        />

    <ToggleButton
        android:id="@+id/btnThu"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Thu"
        android:textOff="Thu"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="32dp"
        android:layout_marginHorizontal="16dp"
        android:translationX="225dp"
        />

    <ToggleButton
        android:id="@+id/btnFri"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Fri"
        android:textOff="Fri"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="32dp"
        android:layout_marginHorizontal="16dp"
        android:translationX="295dp"
        />

    <ToggleButton
        android:id="@+id/btnSat"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Sat"
        android:textOff="Sat"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="32dp"
        />

    <ToggleButton
        android:id="@+id/btnSun"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:textOn="Sun"
        android:textOff="Sun"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="32dp"
        android:layout_marginHorizontal="16dp"
        android:translationX="295dp"
        />

    <Button
        android:id="@+id/btnSetTime"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="SET TIME"
        android:textColor="@color/white"
        android:backgroundTint="@color/mid_grey"
        android:translationX="238dp"
        android:translationY="335dp"
        />

    <Button
        android:id="@+id/btnStartDate"
        android:backgroundTint="@color/mid_grey"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:layout_marginEnd="8dp"
        android:text="start date"
        android:textColor="@color/white"
        android:translationX="32dp"
        android:translationY="335dp"
        android:layout_weight="1.5"/>

    <Button
        android:id="@+id/btnEndDate"
        android:backgroundTint="@color/mid_grey"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        android:text="end date"
        android:translationX="32dp"
        android:translationY="375dp"
        android:layout_weight="1.5"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="32dp"
        android:translationY="430dp"/>

    <Button
        android:id="@+id/btnAddFriends"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/grass_green"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="16dp"
        android:translationY="450dp"
        android:text="Add Friends"
        />

    <Button
        android:id="@+id/btnCreateChallenge"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="16dp"
        android:translationY="500dp"
        android:text="Create"
        android:backgroundTint="@color/mid_grey"
        />

    <Button
        android:id="@+id/btnCancelChallengeCreation"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="16dp"
        android:translationY="550dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        />

</FrameLayout>