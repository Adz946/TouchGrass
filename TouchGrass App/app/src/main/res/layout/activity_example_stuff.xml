<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Example_Stuff">

    <!-- Yo, can you seeeeeeeeeeeeeeeeeeeee?? -->

    <TextView
        android:id = "@+id/Grayskull"
        android:text = "By the power of Grayskull..."
        android:layout_width = "200dp"
        android:layout_height = "20dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
    />
        <!--
        plain Text
        functions -
        id = the unique id to edit in Java
        layout = width/height sizes, top/bottom/left/right positioning
        gravity = positioning of the text within the text box (left/center)
        "parent" = the page
        -->

    <ImageButton
        android:id="@+id/Change"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf = "@id/Grayskull"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintLeft_toLeftOf = "parent"
        app:layout_constraintRight_toRightOf = "parent"
        android:src="@drawable/example_skull"
        android:onClick="Clicker"
        ></ImageButton>

